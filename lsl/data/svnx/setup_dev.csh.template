#----------------------------------------------------------------------
# setup_dev.csh - create development environment for $package
#                 package
#
# $$Id: setup_dev.csh.template 245 2007-03-19 19:01:27Z dwood $$
#----------------------------------------------------------------------


# check command line

if ($$#argv == 0) then
    set root = $$cwd
else if ($$#argv == 1) then
    set root = $$1
else
    echo "usage: source setup_dev.csh [working_dir]"
    goto done
endif    
    

# add working dirs to environment

if ($$?PYTHONPATH == 1) then
    setenv PYTHONPATH "$$root":$${PYTHONPATH}
else
    setenv PYTHONPATH "$$root"
endif

if ($$?PATH == 1) then
    setenv PATH "$$root"/$package/scripts:$${PATH}
else
    setenv PATH "$$root"/$package/scripts
endif

# build any extension modules (*.so) in-place

# python "$$root"/setup.py build_ext --inplace

# clean up
       
unset root

done:
      
